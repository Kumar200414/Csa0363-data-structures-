#include<stdio.h>
int fibonacci(int n) {
	if(n<=1)
	return n;
	return fibonacci(n-1)+fibonacci(n-2);
	}
	int main() {
		int terms;
		printf("enter the number of trms in fibonacci series :");
		scanf("%d",&terms);
		printf("fibonacci series:\n");
		for(int i=0;i<terms;i++) {
			printf("%d",fibonacci(i));
		}
		return 0;
	}

output:
enter the number of trms in fibonacci series :5
fibonacci series:
01123
